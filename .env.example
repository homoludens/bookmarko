# Flaskmarks Docker Configuration
# Copy this file to .env and customize values

# Database
POSTGRES_PASSWORD=your-secure-password-here

# Flask Security
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-c-import-secrets-print-secrets-token-hex-32

# Initial Admin User (optional - creates user on first start)
FLASKMARKS_ADMIN_USER=admin
FLASKMARKS_ADMIN_PASSWORD=your-admin-password
FLASKMARKS_ADMIN_EMAIL=admin@example.com

# RAG / AI Features (optional)
RAG_ENABLED=true
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-70b-versatile

# Set to true to generate embeddings for existing bookmarks on container start
GENERATE_EMBEDDINGS_ON_START=false
